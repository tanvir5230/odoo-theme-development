<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_brand_image_form" model="ir.ui.view">
        <field name="name">brand.image.form</field>
        <field name="model">brand.image</field>
        <field name="arch" type="xml">
            <form string="Brand Image">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="image" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_brand_image_tree" model="ir.ui.view">
        <field name="name">brand.image.tree</field>
        <field name="model">brand.image</field>
        <field name="arch" type="xml">
            <tree string="Brand Image">
                <field name="name"/>
                <field name="image" widget="image" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="action_brand_image" model="ir.actions.act_window">
        <field name="name">Brand Images</field>
        <field name="res_model">brand.image</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_brand_image_root" name="Brand Images Root" sequence="0">
      <menuitem id="menu_brand_image" name="Brand Images" action="action_brand_image"/>
    </menuitem>

</odoo>
