<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="contact_us_section" name="Contact Us">
    <div class="fifth-section container text-center text-white pt-5">
      <div class="row">
        <div
          class="col-12 d-flex flex-column align-items-center justify-content-end"
        >
          <h1>Get in touch with us</h1>
          <div class="py-1 mt-2 rounded bg-white px-1 row">
            <input
              type="email"
              class="text-center py-2 px-2 rounded border-0 col-7 col-lg-8"
              placeholder="Enter Your Email"
            />
            <button class="btn btn-danger col-5 col-lg-4">Sign UP</button>
          </div>
        </div>
      </div>
    </div>
  </template>

</odoo>
