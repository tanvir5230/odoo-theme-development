<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="layout" inherit_id="website.layout">
        <xpath expr="//head" position="inside">
            <link rel="stylesheet" type="text/css" href="/school_management_system/static/src/css/styles.css"/>
            <script type="text/javascript" src="/school_management_system/static/src/js/scripts.js"></script>
        </xpath>
        <xpath expr="//header" position="replace">
            <t t-call="school_management_system.custom_header"/>
        </xpath>
        <xpath expr="//main" position="replace">
            <t t-call="school_management_system.main_body"/>
        </xpath>
        <xpath expr="//footer" position="replace">
            <t t-call="school_management_system.custom_footer"/>
        </xpath>
    </template>
</odoo>
