<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="custom_snippets" inherit_id="website.snippets" name="Custom Snippets">
        <xpath expr="//div[@id='snippet_structure']" position="before">
            <div id="snippet_structure" class="o_panel">
                <div class="o_panel_header">School Management System</div>
                <div class="o_panel_body">
                    <t t-snippet="school_management_system.three_card_snippet" string="Three Card" t-thumbnail="/school_management_system/static/src/img/logo.png">
                        <keywords>three card</keywords>
                    </t>
                </div>
            </div>
        </xpath>
    </template>

</odoo>